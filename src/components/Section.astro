---
const {color = 'var(--grad-dark)', text, angled} = Astro.props
const angledClass = angled ? `${text} angled` : text
---

<div class={angledClass} style=`background: ${color};`>
  <slot />
</div>

<style lang='scss'>

div {
  position: relative;
  margin-top: -100px;
}

.angled {
  clip-path: polygon(0px 0, 100% 100px, 100% 100%, 0px calc(100% - 100px));
}

.light {
  z-index: 1;
  :global(h2), :global(p) {
    color: #fff;
  }
}

.dark {
  z-index: 2;
  :global(h2), :global(p) {
    color: var(--dark);
  }
}

</style>