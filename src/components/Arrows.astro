---
const {link} = Astro.props
---

<a href={link}>
  <div style='margin: auto'>
    <div class='scrollDown' />
    <div class='scrollDown' />
  </div>
</a>

<style lang='scss'>

a {
    bottom: 50px;
    display: flex;
    height: 100px;
    margin: 0 auto;
    position: relative;
    width: 100px;
  }

  .scrollDown {
  animation: fade-move-down 2s ease-in-out infinite;
  border-bottom: 2px solid var(--grey);
  border-right: 2px solid var(--grey);
  height: 13px;
  width: 13px;

  &:last-child {
    animation: fade-move-down2 2s ease-in-out infinite;
  }
}

@keyframes fade-move-down {
  0% {
    opacity: 0;
    transform: translate(0, -10px) rotate(45deg);
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    transform: translate(0, 10px) rotate(45deg);
  }
}

@keyframes fade-move-down2 {
  0% {
    opacity: 0;
    transform: translate(0, 10px) rotate(45deg);
  }

  15% {
    opacity: 0;
    transform: translate(0, -10px) rotate(45deg);
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    transform: translate(0, 12px) rotate(45deg);
  }
}

@keyframes grain {
  0%,
  100% { background-position: (0 0); }
  10% { background-position: (20px 60px); }
  30% { background-position: (80px -20px); }
  50% { background-position: (-20px 50px); }
  70% { background-position: (30px 100px); }
  90% { background-position: (-100px 2px); }
}

</style>