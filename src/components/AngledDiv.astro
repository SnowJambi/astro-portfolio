---
const {invert = false, color = 'var(--grad-dark)'} = Astro.props
const clip = invert ? 'polygon(0px 0%, 100% 95%, 100% 100%, 0px 100%)' : 'polygon(0px 0, 100% 0, 100% 100%, 0px 5%)'
const attr = invert ? 'margin-top' : 'margin-bottom'
---

<div style=`${attr}: -98px; background: ${color}; -webkit-clip-path: ${clip}; clip-path: ${clip};`/>

<style lang='scss'>

div {
  height: 100px;
  position: relative;
  width: 100%;
}

</style>