---
const {invert = false, color = 'var(--grad-dark)'} = Astro.props
const clip = invert ? 'polygon(0px 0%, 100% 95%, 100% 100%, 0px 100%)' : 'polygon(0px 0, 100% 0, 100% 100%, 0px 5%)'
const position = invert ? 'top' : 'bottom'
---

<div class={position} />

<style lang="scss" define:vars={{clip, color}}>

div {
  background:  var(--color);
  height: 100px;
  position: relative;
  width: 100%;
  clip-path: var(--clip);

  &.top {
    top: 2px;
    margin-top: -100px;
  }
  
  &.bottom {
    top: -2px;
    margin-bottom: -100px;
  }
}

</style>