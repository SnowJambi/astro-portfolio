<style lang='scss'>

h2 {
  font-family: Metropolis, Montserrat, Arial, Helvetica, sans-serif;
  font-size: 6.4rem;
  font-weight: 100;
  margin: 0 0 80px;
  text-align: center;

  b {
    font-weight: 900;
  }

  &::after {
    animation: blink 1s steps(1, start) infinite;
    background: var(--dark);
    content: '';
    display: inline-block;
    height: 50px;
    margin-bottom: -5px;
    margin-left: 7px;
    opacity: 0;
    width: 3px;
  }
}

.profile-picture {
  background-color: #000;
  border-radius: 20%;
  box-shadow: 0 0 10px black;
  width: 400px;
  height: auto;
}

.two-col {
  align-items: center;
  display: flex;
}

.summary {
  padding-left: 50px;
}

.buttons {
  margin-top: 40px;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

@media (max-width: 1600px) {
  .profile-picture {
    max-width: 300px;
  }
}

@media (max-width: 1200px) {
  .two-col {
    flex-direction: column;
  }
  
  .summary {
    padding-left: 0;
  }

  .profile-picture {
    border-radius: 50%;
    margin-bottom: 20px;
    max-width: 200px;
  }

  h2 {
    margin-bottom: 20px;
  }
}

@keyframes blink {
  50% { opacity: 0; }
  100% { opacity: 1; }
}

</style>